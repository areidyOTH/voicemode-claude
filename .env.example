# =============================================================================
# STT Provider Configuration
# =============================================================================
# Available providers: groq (default), revai, deepgram
STT_PROVIDER=groq

# Groq API (default - fast and cheap)
GROQ_API_KEY=your_groq_api_key_here
GROQ_STT_MODEL=whisper-large-v3-turbo

# Rev.ai API (backup - slower batch processing)
REV_AI_ACCESS_TOKEN=your_revai_token_here

# Deepgram API (optional)
# DEEPGRAM_API_KEY=your_deepgram_api_key_here

# =============================================================================
# TTS Provider Configuration
# =============================================================================
# Available providers: piper (default, local), kokoro (Replicate cloud)
TTS_PROVIDER=piper

# Replicate API (for Kokoro TTS)
# REPLICATE_API_TOKEN=your_replicate_api_token_here
# KOKORO_DEFAULT_VOICE=af_bella

# =============================================================================
# Other Configuration
# =============================================================================
# OpenAI API Key (not used, but voice-mode expects it)
OPENAI_API_KEY=dummy-for-tts

# Voice Mode Configuration
VOICE_MODE_DEBUG=true

# Display for X11 forwarding (usually :0)
DISPLAY=:0

# Voice Mode Settings
VOICE_MODE_LANGUAGE=en
